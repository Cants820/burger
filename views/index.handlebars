<center>
<h1>Eat-Da-Burgers</h1>
</center>

<div class="container">

    <div class="row">

      <div class="col-md-6 col-xs-6">
        <ul>
          {{#each burger}}
            {{#unless devoured}}
            <button class="burger-btn" id={{this.id}} data-state={{this.devoured}}>{{this.burger_name}}</button>
            {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col-md-6 col-xs-6">
        <ul>
          {{#each burger}}
            {{#if devoured}}
              <button class="burger-btn delete" id={{this.id}} data-state={{this.devoured}}>{{this.burger_name}}</button>
            {{/if}}
          {{/each}}
        </ul>
      </div>

    </div>

 
    <div class="row">
      <div class="col-md-4 col-xs-4"></div>
          <div class="col-md-4 col-xs-4">
            <form class="create-burger">{{!-- listens to the form --}}
            <h2>Add a Burger</h2>
                <div class="form-group">
                  <label for="ca">Burger Name:</label>
                  <textarea id ="add-burger">
                    
                  </textarea>
                 <button id="add">Add Burger</button>
                </div>

            </form>
          </div>
      <div class="col-md-4 col-xs-4"></div>
    </div>

</div> {{!-- end container --}}

